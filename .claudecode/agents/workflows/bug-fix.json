{
  "name": "bug_fix",
  "description": "Debug and fix workflow for resolving bugs",
  "version": "1.0.0",
  "stages": [
    {
      "name": "diagnosis",
      "description": "Identify and analyze the bug",
      "agents": ["debug"],
      "parallel": false,
      "required": true,
      "outputs": [
        "root_cause",
        "affected_code",
        "proposed_fix"
      ]
    },
    {
      "name": "verification",
      "description": "Test the fix",
      "agents": ["testing"],
      "parallel": false,
      "required": true,
      "dependencies": ["diagnosis"],
      "outputs": [
        "test_results",
        "regression_tests"
      ]
    }
  ],
  "success_criteria": [
    "Bug is fixed",
    "Tests pass",
    "No regressions introduced"
  ],
  "triggers": [
    "fix bug",
    "debug issue",
    "resolve error"
  ]
}
